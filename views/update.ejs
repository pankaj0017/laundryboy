<html>
	<head>
		<title>
			LaundryBuoy
		</title>
		<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
        <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
	</head>
	<body>
		<nav class="navbar navbar-default">
	        <div class="container-fluid">
	            <div class="navbar-header">
	                <a class="navbar-brand" href="/">laundrybuoy</a>
	            </div>
	            <div class="collapse navbar-collapse">
	                <ul class="nav navbar-nav navbar-right">
	                    <% if(!user){ %>
	                        <li><a href="/login"><span class="glyphicon glyphicon-log-in" style="color:black;"></span> <span style="color:black;"> Login </span></a></li>
	                        <li ><a href="/signup"><span class="glyphicon glyphicon-user" style="color:black;" ></span> <span style="color:black;">Sign Up</span></a></li>
	                    <% } else { %>
	                    	<li><a href="/profile"><span class="glyphicon glyphicon-user" style="color:black;"></span> <span style="color:black;"> Signed In As <%= user.local.email %> </span></a></li>
	                        <li ><a href="/logout"><span class="glyphicon glyphicon-log-out" style="color:black;" ></span> <span style="color:black;">Logout</span></a></li>
	                    <% } %>
	                </ul>
	            </div>
	        </div>
	    </nav>

    	<div class="col-sm-6 col-sm-offset-3 jumbotron text-center">
    		<p><%= customer.user %></p>
    		<% if(!customer.mobile){ %>

			    <h1><span class="fa fa-sign-in"></span>Enter Details</h1>


			    <!-- DETAIL FORM -->
			    <form action="/update" method="post">
			    	<div class="form-group">
			            <label>Name</label>
			            <input type="text" class="form-control" name="customer[name]" placeholder="Enter Full Name">
			        </div>
			        <div class="form-group">
			            <label>Pin Code</label>
			            <input type="number" class="form-control" name="customer[pinCode]" placeholder="Enter Your Pin Code">
			        </div>
			        <div class="form-group">
			            <label>Address</label>
			            <textarea class="form-control" name="customer[address]" placeholder="Enter Your Address"></textarea>
			        </div>

			        <button type="submit" class="btn btn-success btn-lg">Enter</button>
			    </form>


            <% } else { %>
            	<h1><span class="fa fa-sign-in"></span>Enter Details</h1>


			    <!-- UPDATE FORM -->
			    <form action="/update" method="post">
			    	<div class="form-group">
			            <label>Name</label>
			            <input type="text" class="form-control" name="customer[name]" value="<%= customer.name %>">
			        </div>
			        <div class="form-group">
			            <label>Pin Code</label>
			            <input type="number" class="form-control" name="customer[pinCode]" value="<%= customer.pinCode %>">
			        </div>
			        <div class="form-group">
			            <label>Address</label>
			            <textarea class="form-control" name="customer[address]"><%= customer.address %></textarea>
			        </div>

			        <button type="submit" class="btn btn-success btn-lg">Enter</button>
			    </form>
            <% } %>

            <h6><a href="/update/mobile">Mobile Numbers</a></h6>
        </div>
	</body>
</html>