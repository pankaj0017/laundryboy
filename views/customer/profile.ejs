<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
    <title>LaundryBuoy</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    
  <link href="/css/style.css" rel="stylesheet">

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <style>
        body        { padding-top:80px; word-wrap:break-word; }

    </style>
</head>
<body>
<nav class="navbar navbar-default">
  <div class="container-fluid">

    <div class="navbar-header">
                    <a class="navbar-brand page-scroll sticky-logo" href="/">
                        <h1><span>LaundryBuoy</span></h1>
                    </a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                            <li><a href="/update"><span class="glyphicon glyphicon-user" style="color:black;"></span> <span style="color:black;"> 
                            Update</span></a></li>
                            <li ><a href="/logout"><span class="glyphicon glyphicon-log-out" style="color:black;" ></span> <span style="color:black;">Logout</span></a></li>
                    </ul>
                </div>


  </div>
</nav>

<div class="container">


    <div class="row">
          <center>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="pri_table_list">
                  <h3>Personal<br> <span>Details</span></h3>
                  <ol text-align:center>
                    <li>Name : <%= customer.name %></li>
                    <li>Address : Rs. <%= customer.address %></li>
                    <li>Contact No.: <%= customer.mainNumber %></li>
                    <li>Customer Tag : <%= customer.tagNumber %></li>
                  </ol>
                <form method="get" action="/update">
                     <button type="submit">Edit Details</button>
                </form>
                </div>
              </div>  
              <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="pri_table_list">
                  <h3>Remaining<br/> <span>Plan Details</span></h3>
                  <ol text-align:center>
                    <li>Long Clothes : <%= customer.longClothes %></li>
                    <li>Short Clothes : <%= customer.shortClothes %></li>
                    <li>Validity : <%= customer.daysLeft %></li>
                    <li>Pickup Key : <%= customer.pickUpKey %></li>
                  </ol>
                <form method="get" action="/pincode">
                     <button type="submit" 
                        <% if(customer.isBusy){ %>
                            disabled 
                        <% } %>
                        >Order Pickup Now</button>
                </form>
                </div>
              </div> 
          </center>
    </div>

            <!-- Nav tabs -->
            <br><br>
        <center>
        <ul class="nav nav-tabs">
            <li class="active col-lg-6 col-md-6 col-sm-6"><a data-toggle="tab" href="#rechargehistory">Recharge History</a></li>
            <li class="col-lg-6 col-md-6 col-sm-6"><a data-toggle="tab" href="#orderhistory">Order History</a></li>
        </ul>
        </center>

    <div class="tab-content">


        <div id="rechargehistory" class="tab-pane fade in active">

            <div class="row">
                <h2>Recharge History</h2>

                <% customer.currentRecharges.forEach(function(recharge){  %>
          
                    <div class="col-lg-4 col-md-6 col-sm-12 well">
                        <span><%= recharge.rechargeDate %></span>
                        <span> : <%= recharge.amount %></span>
                    </div> 

                <% }) %>
                     
            </div>

        </div>

        <div id="orderhistory" class="tab-pane fade">

            <div class="row">
                <h2>Order History</h2>

                <% customer.history.forEach(function(order){  %>
          
                    <div class="col-lg-4 col-md-6 col-sm-12 well">
                        <p>OrderID : <%= order._id %></p>
                        <span><%= order.description %></span>
                        <span> : <%= order.cost %></span>
                        <span> : <%= order.status %></span>
                        <span> : <%= order.orderDate %></span>
                        <span> : <%= order.deliveryDate %></span>
                    </div> 

                <% }) %>
                     
            </div>
        
        </div>
    </div>
</div>
</body>
</html>