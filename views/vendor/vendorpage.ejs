<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>LaundryBuoy</title>
    <link href="/img/logotitle.ico" rel="shortcut icon">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
        <center><h1>Vendor Page</h1></center>
        <h3><br></h3>
<div class="container">
    <center>
        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#received">Receive</a></li>
            <li><a data-toggle="tab" href="#washed">Wash</a></li>
            <li><a data-toggle="tab" href="#ironed">Iron</a></li>
            <li><a data-toggle="tab" href="#ready">Ready</a></li>
        </ul>
    </center>

    <div class="tab-content">
        <div id="received" class="tab-pane fade in active">

            <div class="row">
                <h2><br></h2>

                <% vendor.currentOrders.forEach(function(order){ if(order.status === 'picked') { %>
          
                    <div class="col-lg-4 col-md-6 col-sm-12 well">

                        <p><strong>OrderID</strong> : <%= order._id %></p>
                        <p><span><strong>Tag</strong> : <%= order.customer.tagNumber %></span>
                        <span><strong>Bag</strong> : <%= order.customer.bagNumber %></span>
                        <% if (order.onlyIron) { %>
                            <span><strong>Only Iron</strong></span>
                        <% } %>
                        <span>
                            <a href="/vendor/<%=vendor._id%>/received/<%=order._id%>" class="btn btn-default btn-sm">Receive</a>
                        </span></p>
                        <p><strong>Description</strong> : <%= order.description %></p>
                        <p><strong>Contact Number</strong> : <a href="tel:<%= order.customer.mainNumber %>"><%= order.customer.mainNumber %></a></p>
                    </div>

                <% }}) %>
                     
            </div>

        </div>

        <div id="washed" class="tab-pane fade">

            <div class="row">
                <h2><br></h2>

                <% vendor.currentOrders.forEach(function(order){ if(order.status === 'received') { %>
          
                    <div class="col-lg-4 col-md-6 col-sm-12 well">
                        <p><strong>OrderID</strong> : <%= order._id %></p>
                        <p><span><strong>Tag</strong> : <%= order.customer.tagNumber %></span>
                        <span><strong>Bag</strong> : <%= order.customer.bagNumber %></span>
                        <% if (order.onlyIron) { %>
                            <span><strong>Only Iron</strong></span>
                        <% } %>
                        <span>
                            <a href="/vendor/<%=vendor._id%>/washed/<%=order._id%>" class="btn btn-default btn-sm">Washed</a>
                        </span>
                        <p><strong>Description</strong> : <%= order.description %></p>
                        <p><strong>Contact Number</strong> : <a href="tel:<%= order.customer.mainNumber %>"><%= order.customer.mainNumber %></a></p>
                    </div> 

                <% }}) %>
                     
            </div>
        
        </div>

        <div id="ironed" class="tab-pane fade">

            <div class="row">
                <h2><br></h2>

                <% vendor.currentOrders.forEach(function(order){ if(order.status === 'washed') { %>
          
                    <div class="col-lg-4 col-md-6 col-sm-12 well">
                        <p><strong>OrderID</strong> : <%= order._id %></p>
                        <p><span><strong>Tag</strong> : <%= order.customer.tagNumber %></span>
                        <span><strong>Bag</strong> : <%= order.customer.bagNumber %></span>
                        <% if (order.onlyIron) { %>
                            <span><strong>Only Iron</strong></span>
                        <% } %>
                        <span>
                            <a href="/vendor/<%=vendor._id%>/ironed/<%=order._id%>" class="btn btn-default btn-sm">Ironed</a>
                        </span>
                        <p><strong>Description</strong> : <%= order.description %></p>
                        <p><strong>Contact Number</strong> : <a href="tel:<%= order.customer.mainNumber %>"><%= order.customer.mainNumber %></a></p>
                    </div> 

                <% }}) %>
                     
            </div>
        
        </div>
        <div id="ready" class="tab-pane fade">

            <div class="row">
                <h2><br></h2>

                <% vendor.currentOrders.forEach(function(order){ if(order.status === 'ironed' || order.status === 'out' || order.status === 'delivered') { %>
          
                    <div class="col-lg-4 col-md-6 col-sm-12 well">
                        <p><strong>OrderID</strong> : <%= order._id %></p>
                        <p><span><strong>Tag</strong> : <%= order.customer.tagNumber %></span>
                        <span><strong>Bag</strong> : <%= order.customer.bagNumber %></span>
                        <% if (order.onlyIron) { %>
                            <span><strong>Only Iron</strong></span>
                        <% } %>
                        <span><strong>Name : </strong><%= order.customer.name %></span>
                        <p><span><%= order.customer.address %></span>
                        <span> : <strong><%= order.customer.pinCode %></strong></span></p>
                        <p><strong>Description</strong> : <%= order.description %></p>
                        <p><strong>Contact Number</strong> : <a href="tel:<%= order.customer.mainNumber %>"><%= order.customer.mainNumber %></a></p>
                    </div> 

                <% }}) %>
                     
            </div>
        
        </div>
    </div>
        
            
</div>


</body>
</html>