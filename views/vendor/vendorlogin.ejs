   <div class="container">
<div class="row">
<div class="col-md-10 ">
<fieldset class="form-horizontal">
<br>
<!-- Form Name -->
<center><legend><b><h1 style="font-family: courier new;font-size: 40px;">Vendor Login</h1></b></legend></center>


    <% if (message.length > 0) { %>
    <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    
<form action="/vendorlogin" method="post">
        <div class="form-group">
            <label class="col-md-4 control-label" for="Tag">Tag</label>
            <div class="col-md-4">
 <div class="input-group">
       <div class="input-group-addon">
        <i class="fa fa-user">
        </i>
       </div>
            <input type="text" class="form-control" required pattern="([a-z0-9A-Z]){4,}" name="tag">
        </div>
    </div>
</div>
        <div class="form-group">
            <label class="col-md-4 control-label" for="Password">Password</label>
            <div class="col-md-4">
 <div class="input-group">
    <div class="input-group-addon">
        <i class="fa fa-lock">
        </i>
       </div>
            <input type="password" class="form-control" required name="password">
        </div>
    </div>
</div>
                <div class="form-group"><br>
  <label class="col-md-4 control-label" ></label> 
  <button class="btn btn-success btn-lg">Login</button>
</div>
    </form>

</fieldset>

</div>

</div>
</body>
</html>