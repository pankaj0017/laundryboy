<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
    <title>LaundryBuoy</title>
    <link href="/img/logotitle.ico" rel="shortcut icon">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>


<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span>Pincode  Page</h1>
        <a href="/" class="btn btn-default btn-sm">Home</a>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <a href="/admin" class="btn btn-default btn-sm">Back</a>
    </div>

    <div class="col-sm-6 col-sm-offset-3 jumbotron text-center">

        <h3><span class="fa fa-sign-in"></span>Add new pincodes</h3>

        <!-- CREATING -->
                <form action="/admin/pincodes" method="post">

                    <div class="form-group">
                        <label>Pincode</label>
                        <input type="number" class="form-control" name="pinCode">
                    </div>
                    <div class="form-group">
                        <label>Vendor Tag</label>
                        <input type="text" class="form-control" name="vendorTag" value="lbv">
                    </div>
                    <div class="form-group">
                        <label>DeliveryBoy Tag</label>
                        <input type="text" class="form-control" name="deliveryBoyTag" value="lbd">
                    </div>

                    <button type="submit" class="btn btn-success btn-lg">Add</button>
                    
                </form>
        <!-- CREATING -->

    </div>

    <div class="col-sm-6 col-sm-offset-3">
        <div class="table-responsive">
            <table class="table">
                <tr>
                    <td>Pincode</td>
                    <td>Vendor</td>
                    <td>DeliveryBoy</td>
                    <td></td>
                </tr>
                <% pincodes.forEach(function(pincode){ %>

                    <tr>
                        <td><%= pincode.pinCode %></td>
                        <td><%= pincode.vendor.name %></td>
                        <td><%= pincode.deliveryBoy.name %></td>
                        <td>
                            <form class="form-inline" action="/admin/pincodes/<%=pincode._id%>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                        </td>
                    </tr>

                <% }) %>
            </table>
        </div>

    </div>

</div>
</body>
</html>