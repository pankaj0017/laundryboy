<html>
    <head>
        <title>LaundryBuoy</title>
        <link href="/img/logotitle.ico" rel="shortcut icon">
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
        <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
    </head>
    <body>

        <div class="col-sm-6 col-sm-offset-3 jumbotron text-center">

            <div class="table-responsive">
                <table class="table">
                    <tr>
                        <td><strong>Order ID </strong></td>
                        <td><%= order._id %></td>
                    </tr>
                </table>
            </div>

            <div class="page-header text-center">
                <a href="/" class="btn btn-default btn-sm">Home</a>
                <a href="/logout" class="btn btn-default btn-sm">Logout</a>
                <a href="/admin/order" class="btn btn-default btn-sm">Back</a>
            </div>

                <h3><span class="fa fa-book"></span>Change Order Details</h3>


                <!-- UPDATE FORM -->
                <form action="/admin/order/<%=order._id%>" method="post">

                    <div class="form-group">
                        <label>Cost</label>
                        <input type="number" class="form-control" name="order[cost]" value="<%= order.cost %>">
                    </div>
                        <div class="checkbox">
                            <label>Is Paid</label>
                            <input id="paymentCheck" type="checkbox" name="payWithPlan" value="true" <% if(0) { %>disabled<% } else { %> checked="true" <% } %> >
                        </div>
                        <input type="text" class="form-control" name="order[tagNumber]" value="<%= order.isPaid %>">
                    <div class="form-group">
                        <label>Description</label>
                        <textarea class="form-control" name="order[description]"><%= order.description %></textarea>
                    </div>
                    <div class="form-group">
                        <label>Rating</label>
                        <input type="number" class="form-control" name="order[rating]" value="<%= order.rating %>">
                    </div>
                    <div class="form-group">
                        <label>Status</label>
                        <input type="text" class="form-control" name="order[status]" value="<%= order.status %>">
                    </div>
                    <div class="form-group">
                        <label>Only Iron</label>
                        <input type="number" class="form-control" name="order[onlyIron]" value="<%= order.onlyIron %>">
                    </div>

                    <button type="submit" class="btn btn-success btn-lg">Change</button>
                    
                </form>
        </div>
    </body>
</html>