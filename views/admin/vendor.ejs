<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>


<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Vendor Page</h1>
        <a href="/" class="btn btn-default btn-sm">Home</a>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <a href="/admin" class="btn btn-default btn-sm">Back</a>
    </div>

    <div class="col-sm-6 col-sm-offset-3 jumbotron text-center">
        <p><%= user.local.email %></p>

        <h3><span class="fa fa-sign-in"></span>add new vendor</h3>

        <!-- CREATING -->
                <form action="/admin/vendors" method="post">

                    <div class="form-group">
                        <label>Vendor Tag</label>
                        <input type="text" class="form-control" name="newVendor[username]" value="lbv<%= vendorCount %>">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="newVendor[password]">
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" name="newVendor[name]">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" name="newVendor[email]">
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <textarea class="form-control" name="newVendor[address]"></textarea>
                    </div>
                    <div class="form-group">
                        <label>mobile</label>
                        <input type="text" class="form-control" name="newVendor[mobile]">
                    </div>

                    <button type="submit" class="btn btn-success btn-lg">Add new vendor</button>
                    
                </form>

                <br><br><p>list of vendors : click for more details</p>
        <!-- CREATING -->

        <% vendors.forEach(function(vendor){ %>
                
            <p><a href="/admin/vendors/<%= vendor._id %>" ><%= vendor.name %></a></p>

        <% }) %>

    </div>

</div>
</body>
</html>