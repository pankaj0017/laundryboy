                            <button type="button" class="quantity-left-minus btn btn-danger btn-number"  data-type="<%= clothe.name %>" data-field="<%= clothe.price %>" onclick="decQuantity(this)">
                              <span class="glyphicon glyphicon-minus"></span>
                            </button>
                        </span>
                        <input type="number" id="<%= clothe.name %>" name="<%= clothe.name %>" class="form-control input-number" value="0" min="0" max="30">
