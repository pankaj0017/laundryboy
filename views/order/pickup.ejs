                            <button type="button" class="quantity-right-plus btn btn-success btn-number" data-type="<%= clothe.name %>" data-field="<%= clothe.price %>" onclick="incQuantity(this)">
                                <span class="glyphicon glyphicon-plus"></span>
                            </button>
                        </span>
                    </div>
            </div> 

        <% }}) %>
   </div>
</div>
        <center>
            <h6>*Service Charges are extra as applicable.</h6>
        </center>
<div class="col-sm-4 col-sm-offset-4">
        <div class="form-group">
            <label>Estimated Cost: </label>
            <input type="number" id="estimatedCost" name="estimatedCost" class="form-control input-number" value="0" readonly>
        </div>
        <div class="form-group">
            <label>delivery boy tag</label>
            <input type="text" class="form-control" name="ctag">
        </div>
        <div class="form-group">
            <label>order key</label>
            <input type="text" class="form-control" name="dtag">
        </div>

        <button type="submit" class="btn btn-primary btn-lg">place order</button>
</div>
</form>
</body>
</html>