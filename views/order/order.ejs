<html>
    <head>
        <title>
            LaundryBuoy
        </title>
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
        <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
    </head>
    <body>
        <div class="col-sm-6 col-sm-offset-3 jumbotron text-center">
            <p><%= customer.user %></p>
            <p><%= customer._id %></p>
            here <p><%= customer.referedBy %></p>

                <h1><span class="fa fa-sign-in"></span>Enter Details</h1>


                <!-- UPDATE FORM -->
                <form action="/update" method="post">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" name="customer[name]" value="<%= customer.name %>">
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <textarea class="form-control" name="customer[address]"><%= customer.address %></textarea>
                    </div>
                    <div class="form-group">
                        <label>Pin Code</label>
                        <input type="number" class="form-control" name="customer[pinCode]" value="<%= customer.pinCode %>" readonly>
                    </div>
                    <div class="form-group">
                      <label for="sel1">Select a Mobile number</label>
                      <select class="form-control" name="customer[mainNumber]">

                        <option value="" selected disabled hidden><%= customer.mainNumber %></option>
                        <% customer.numbers.forEach(function(cell){ %>
                            <option>
                                <%= cell.number %>
                            </option>
                        <% }) %>
                        
                      </select>
                    </div>

                    <button type="submit" class="btn btn-success btn-lg">Enter</button>
                    
                </form>

            <h3><a href="/update/mobile"><span class="fa fa-sign-in"></span>Manage Mobile Numbers</a></h3>
        </div>
    </body>
</html>